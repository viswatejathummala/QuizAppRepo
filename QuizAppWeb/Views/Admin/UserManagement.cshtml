@model IEnumerable<UserModel>

@{
    ViewBag.Title = "User Management";
}

<h2>User Management</h2>

<!-- Button to create a new user -->
<a href="@Url.Action("CreateUser", "Admin")" class="btn btn-primary">Create New User</a>

<!-- User List Table -->
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <!-- Edit Button -->
                    <a href="@Url.Action("EditUser", "Admin", new { id = user.Email })" class="btn btn-info">Edit</a>

                    <!-- Delete Button -->
                    <a href="@Url.Action("DeleteUser", "Admin", new { id = user.Email })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
